<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/news_type_1_ImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hahah"
            android:textColor="@color/b3"
            android:textSize="@dimen/dp_17"></TextView>

        <com.zhangying.oem1688.custom.MyRecycleView
            android:id="@+id/myRecycleView_type1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_tv"
            android:layout_marginTop="@dimen/dp_15">

        </com.zhangying.oem1688.custom.MyRecycleView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myRecycleView_type1"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/ncate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hahah"
                android:textColor="@color/b9"></TextView>

            <TextView
                android:id="@+id/ntime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="hahah"
                android:textColor="@color/b9"></TextView>


            <TextView
                android:id="@+id/nhits_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="hahah"
                android:textColor="@color/b9"></TextView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/news_type_1_ImageView_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/image_one"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            app:riv_corner_radius="@dimen/dp_6"
            android:background="@drawable/shop_b_sp_db"></com.xuexiang.xui.widget.imageview.RadiusImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@+id/image_one">

            <TextView
                android:id="@+id/content_tv_image_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hahah"
                android:textColor="@color/b3"
                android:textSize="@dimen/dp_17"></TextView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_tv_image_one"
                android:layout_marginTop="@dimen/dp_15">

                <TextView
                    android:id="@+id/ncate_tv_image_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hahah"
                    android:textColor="@color/b9"></TextView>

                <TextView
                    android:id="@+id/ntime_tv_image_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="hahah"
                    android:textColor="@color/b9"></TextView>


                <TextView
                    android:id="@+id/nhits_tv_image_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="hahah"
                    android:textColor="@color/b9"></TextView>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rootView_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.xuexiang.xui.widget.imageview.RadiusImageView
                android:id="@+id/company_loge_iv"
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_46"
                android:src="@drawable/shop_b_sp_db"
                app:riv_corner_radius="@dimen/dp_360"></com.xuexiang.xui.widget.imageview.RadiusImageView>

            <TextView
                android:layout_marginTop="-2dp"
                android:id="@+id/company_kehu_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/company_loge_iv"
                android:text="hahah"
                android:textColor="@color/b3"
                android:textSize="@dimen/dp_16"></TextView>

            <TextView
                android:id="@+id/companyphone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/company_kehu_name_tv"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@+id/company_kehu_name_tv"
                android:text="hahah"
                android:textSize="@dimen/dp_16"
                android:textColor="@color/b6"></TextView>

            <TextView
                android:id="@+id/company_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/company_loge_iv"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/company_loge_iv"
                android:text="hahah"
                android:textColor="@color/b6"
                android:textSize="@dimen/dp_14"></TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/company_contont_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="hahhahha"
            android:textColor="@color/b3"
            android:textSize="@dimen/dp_16"></TextView>

        <com.zhangying.oem1688.custom.MyRecycleView
            android:id="@+id/company_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

        </com.zhangying.oem1688.custom.MyRecycleView>

        <TextView
            android:id="@+id/company_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="hahah"
            android:textColor="@color/b9"></TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/fF3F4F5">

    </View>
</LinearLayout>