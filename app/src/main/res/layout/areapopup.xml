<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_500"
    android:background="@color/ee"
    android:orientation="vertical">
    <View
        android:background="@color/b6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.core.widget.NestedScrollView
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent">

            <com.zhangying.oem1688.custom.MyRecycleView
                android:id="@+id/MyRecycleView_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.zhangying.oem1688.custom.MyRecycleView>
        </androidx.core.widget.NestedScrollView>

        <androidx.core.widget.NestedScrollView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rightRelative"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/type_ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/content_tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_15"
                        android:text=""
                        android:textColor="@color/b6"></TextView>

                    <com.zhangying.oem1688.custom.MyRecycleView
                        android:id="@+id/MyRecycleView_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.zhangying.oem1688.custom.MyRecycleView>
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/type_ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/content_tv_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/dp_15"
                        android:text=""
                        android:textColor="@color/b6"></TextView>

                    <com.zhangying.oem1688.custom.MyRecycleView
                        android:id="@+id/MyRecycleView_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_15">

                    </com.zhangying.oem1688.custom.MyRecycleView>
                </LinearLayout>
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>