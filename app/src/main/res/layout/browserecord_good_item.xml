<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ee"
    android:elevation="@dimen/dp_0"
    app:cardElevation="@dimen/dp_0"
    app:cardCornerRadius="@dimen/dp_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="vertical">

            <com.xuexiang.xui.widget.imageview.RadiusImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/b3"
                android:layout_height="@dimen/dp_38"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:textColor="@color/b6"
                android:layout_height="@dimen/dp_38"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:text="" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone"
            android:id="@+id/checksign_rl"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/bg_browse_bt">

            <ImageView
                android:id="@+id/checksign_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/checksign">

            </ImageView>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>