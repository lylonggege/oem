<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@id/rootView"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/companyname_rootview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/company_loge_iv"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"></ImageView>

        <TextView
            android:id="@+id/companyname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/company_loge_iv"
            android:text=""
            android:textColor="@color/b3"
            android:textSize="@dimen/dp_17">

        </TextView>

        <LinearLayout
            android:id="@+id/line_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyname_tv"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/company_loge_iv"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/dian">

                <TextView
                    android:id="@+id/companyname_authtag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/dian_pre"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dp_3"
                    android:paddingVertical="@dimen/dp_2"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_11">

                </TextView>

                <TextView
                    android:id="@+id/company_storetime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/redf04142"
                    android:padding="@dimen/dp_2"
                    android:text=""
                    android:textSize="@dimen/dp_11"></TextView>

            </LinearLayout>

            <TextView
                android:textSize="@dimen/dp_14"
                android:id="@+id/cate_tv"
                android:layout_width="@dimen/dp_210"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:lines="1"
                android:text=""
                android:textColor="@color/b6"></TextView>

            <TextView
                android:textSize="@dimen/dp_14"
                android:visibility="visible"
                android:id="@+id/address_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="right"
                android:lines="1"
                android:text=""
                android:textColor="@color/b9"></TextView>


        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_sign"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/company_loge_iv">


            <LinearLayout
                android:id="@+id/rootView_bang_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_3"
                    android:background="@drawable/bang"></ImageView>

                <TextView
                    android:id="@+id/rootView_bang_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/b25720"
                    android:textSize="@dimen/dp_12">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/tuijian_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toRightOf="@+id/rootView_bang_ll"
                android:background="@drawable/red_hot"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_2"
                android:text=""
                android:textColor="@color/ff3600"
                android:textSize="@dimen/dp_12">

            </TextView>

            <TextView
                android:id="@+id/company_verification_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tuijian_tv"
                android:background="@drawable/red_hot"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_2"
                android:text=""
                android:textColor="@color/ff3600"
                android:textSize="@dimen/dp_12">

            </TextView>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>