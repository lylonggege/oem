<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/body_bg1">

                <com.zhouwei.mzbanner.MZBannerView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_margin="@dimen/dp_10"
                    app:canLoop="true"
                    app:indicatorPaddingLeft="10dp"
                    app:open_mz_mode="true" />

            </RelativeLayout>

            <com.zhangying.oem1688.custom.MyRecycleView
                android:id="@+id/myRecycleView_gcates"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.zhangying.oem1688.custom.MyRecycleView>

            <RelativeLayout
                android:id="@+id/line_container_tv"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5">
                <View
                    android:id="@+id/pageLine1"
                    android:layout_width="80dp"
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_cate_out_page">
                </View>
                <View
                    android:id="@+id/pageLine2"
                    android:layout_width="10dp"
                    android:layout_alignLeft="@+id/pageLine1"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_cate_in_page">

                </View>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/marqueeView_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="-12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_gg">
                    
                </ImageView>

                <TextView
                    android:id="@+id/news_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text=""
                    android:textColor="@color/ff3600">

                </TextView>

                <TextView
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@color/ee">

                </TextView>

                <com.xuexiang.xui.widget.textview.marqueen.MarqueeView
                    android:id="@+id/marqueeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:id="@+id/view_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/ee">
            </View>

            //帮我找找工厂
            <LinearLayout
                android:id="@+id/queryfactory_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_15"
                            android:gravity="center"
                            android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_bwzc"/>
                        <TextView
                            android:id="@+id/help_bold_1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="帮我找工厂"
                            android:textColor="@color/b3"
                            android:textSize="@dimen/dp_17">
                        </TextView>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/findfactory_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/rb_bg_disabled">

                        <LinearLayout
                            android:id="@+id/line_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="三步轻松找工厂"
                                android:textColor="@color/b6"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="极速响应/专属推荐"
                                android:textColor="@color/b6"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:gravity="center"
                            android:layout_below="@+id/line_1"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/help_bold_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="快速找工厂"
                                android:textColor="@color/b3"></TextView>
                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/icon_go_333">
                            </ImageView>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_67"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/help_search">
                        </ImageView>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_cjdg"/>
                        <TextView
                            android:id="@+id/oem_bold_1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="承接代加工"
                            android:textColor="@color/b3"
                            android:textSize="@dimen/dp_17">
                        </TextView>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/findproduct_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/rb_bg_disabled">

                        <LinearLayout
                            android:id="@+id/line_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="自有工厂寻品牌商"
                                android:textColor="@color/b6"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="可以承接OEM/ODM"
                                android:textColor="@color/b6"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/line_2"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/oem_bold_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发布承接单"
                                android:textColor="@color/b3"></TextView>
                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/icon_go_333">
                            </ImageView>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_67"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/help_zpps">
                        </ImageView>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            //多条字体轮播
            <RelativeLayout
                android:id="@+id/lunbo_RL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_190"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/rb_bg_disabled_lunbo">
            </RelativeLayout>

            //列表
            <com.zhangying.oem1688.custom.MyRecycleView
                android:id="@+id/recycView_szhshlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
            </com.zhangying.oem1688.custom.MyRecycleView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/f6"
                android:padding="@dimen/dp_10">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/renqi_jx">
                    </ImageView>

                    <TextView
                        android:id="@+id/more_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/b3"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold"></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/renqi_jx">
                    </ImageView>
                </LinearLayout>

            </RelativeLayout>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.zhangying.oem1688.custom.MyRecycleView
                        android:id="@+id/recycView_sgoodlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:background="@color/f6">
                    </com.zhangying.oem1688.custom.MyRecycleView>
                </androidx.core.widget.NestedScrollView>

                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>