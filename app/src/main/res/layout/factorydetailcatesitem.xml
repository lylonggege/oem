<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/ee"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text=""
        android:textColor="@color/b6"
        android:textSize="@dimen/dp_20"></TextView>

    <com.zhangying.oem1688.custom.scroll.AutoPollRecyclerView
        android:id="@+id/MyRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_tv"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"></com.zhangying.oem1688.custom.scroll.AutoPollRecyclerView>
</RelativeLayout>