<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/de">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rootView_shop_b_dp_ll"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shop_b_dp_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/factory_button_home_iv"></ImageView>

                    <TextView
                        android:id="@+id/shop_b_dp_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="首页"
                        android:textColor="@drawable/factory_button_home_tv"
                        android:textSize="@dimen/dp_16">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rootView_shop_b_sp_ll"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shop_b_sp_db_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/factory_button_cate_iv"></ImageView>

                    <TextView
                        android:id="@+id/shop_b_sp_db_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="品类"
                        android:textColor="@drawable/factory_button_home_tv"
                        android:textSize="@dimen/dp_16">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rootView_shop_b_sc_ll"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rootview_shoucang_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/rootview_shoucang"
                        android:clickable="false"></ImageView>

                    <TextView
                        android:id="@+id/rootview_shoucang_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:clickable="false"
                        android:text="收藏"
                        android:textColor="@color/b6"
                        android:textSize="@dimen/dp_16">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rootView_phone"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/release_green30"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="拨打电话"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"></TextView>

            <TextView
                android:id="@+id/rootView_line"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/release30"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="在线沟通"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"></TextView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>