<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rootView"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/company_loge_iv"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/shop_b_sp_db"
            app:riv_corner_radius="@dimen/dp_360"></com.xuexiang.xui.widget.imageview.RadiusImageView>

        <TextView
            android:id="@+id/company_kehu_name_tv"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/company_loge_iv"
            android:text=""
            android:textColor="@color/b3"
            android:textSize="@dimen/dp_16"></TextView>

        <TextView
            android:id="@+id/Collect_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/red30"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:text="取消收藏"
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/company_tv"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_kehu_name_tv"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/company_loge_iv"
            android:ellipsize="end"
            android:lines="2"
            android:text=""
            android:textColor="@color/b6"
            android:textSize="@dimen/dp_16"></TextView>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/de">

    </TextView>
</LinearLayout>